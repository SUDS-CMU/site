---
import "@fontsource/poppins/400.css";
import "@fontsource/poppins/500.css";
import "@fontsource/poppins/600.css";
import "@fontsource/poppins/700.css";
import "../styles/global.css";
import { Image } from 'astro:assets';
import SudsLogo from '../assets/suds.png';

interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/png" href="/favicon.png" />
		<meta name="generator" content={Astro.generator} />
		<title>{title} | CMU SUDS</title>
		<script
			is:inline
			defer
			src="https://umami.cmudsc.com/script.js"
			data-website-id="5499ce61-538b-4e11-85d8-75f240356d6a"></script>
	</head>
	<body class="flex flex-col min-h-screen">
		<header class="bg-white shadow-sm">
			<div class="container mx-auto px-4 py-4">
				<div class="flex justify-between items-center">
					<a href="/" class="flex items-center gap-2">
						<div class="w-10 h-10 flex items-center justify-center">
							<Image src={SudsLogo} alt="SUDS Logo" width={80} height={80} />
						</div>
						<span class="text-xl font-bold text-black">SUDS</span>
					</a>

					<nav class="hidden md:flex items-center space-x-6">
						<a href="/" class="text-gray-700 hover:text-accent-600 font-medium"
							>Home</a
						>
						<a
							href="/about"
							class="text-gray-700 hover:text-accent-600 font-medium">About</a
						>
						<a
							href="/projects"
							class="text-gray-700 hover:text-accent-600 font-medium"
							>Projects</a
						>
						<a
							href="/for-students"
							class="text-gray-700 hover:text-accent-600 font-medium"
							>For Students</a
						>
						<a href="/work-with-us" class="cta-button">Work With Us</a>
					</nav>

					<button class="md:hidden text-gray-700" id="mobile-menu-button">
						<svg
							xmlns="http://www.w3.org/2000/svg"
							class="h-6 w-6"
							fill="none"
							viewBox="0 0 24 24"
							stroke="currentColor"
						>
							<path
								stroke-linecap="round"
								stroke-linejoin="round"
								stroke-width="2"
								d="M4 6h16M4 12h16M4 18h16"></path>
						</svg>
					</button>
				</div>

				<div class="md:hidden hidden mt-4 pb-2" id="mobile-menu">
					<nav class="flex flex-col space-y-3">
						<a href="/" class="text-gray-700 hover:text-accent-600 font-medium"
							>Home</a
						>
						<a
							href="/about"
							class="text-gray-700 hover:text-accent-600 font-medium">About</a
						>
						<a
							href="/projects"
							class="text-gray-700 hover:text-accent-600 font-medium"
							>Projects</a
						>
						<a
							href="/for-students"
							class="text-gray-700 hover:text-accent-600 font-medium"
							>For Students</a
						>
						<a href="/work-with-us" class="cta-button inline-block w-fit"
							>Work With Us</a
						>
					</nav>
				</div>
			</div>
		</header>

		<main class="flex-grow">
			<slot />
		</main>

		<footer class="bg-gray-100 py-8">
			<div class="container mx-auto px-4">
				<div class="grid grid-cols-1 md:grid-cols-3 gap-8">
					<div>
						<h3 class="text-lg font-semibold mb-4">Contact Us</h3>
						<p class="text-gray-600 mb-2">
							Email: <a
								href="mailto:sudscmu@gmail.com"
								class="hover:text-accent-600">sudscmu@gmail.com</a
							>
						</p>
						<div class="flex space-x-4 mt-4">
							<a
								href="https://www.instagram.com/sudscmu"
								target="_blank"
								rel="noopener noreferrer"
								class="text-gray-600 hover:text-accent-600"
								aria-label="Instagram"
							>
								<svg
									xmlns="http://www.w3.org/2000/svg"
									class="h-5 w-5"
									fill="currentColor"
									viewBox="0 0 24 24"
								>
									<path
										d="M12 2.163c3.204 0 3.584.012 4.85.07 3.252.148 4.771 1.691 4.919 4.919.058 1.265.069 1.645.069 4.849 0 3.205-.012 3.584-.069 4.849-.149 3.225-1.664 4.771-4.919 4.919-1.266.058-1.644.07-4.85.07-3.204 0-3.584-.012-4.849-.07-3.26-.149-4.771-1.699-4.919-4.92-.058-1.265-.07-1.644-.07-4.849 0-3.204.013-3.583.07-4.849.149-3.227 1.664-4.771 4.919-4.919 1.266-.057 1.645-.069 4.849-.069zm0-2.163c-3.259 0-3.667.014-4.947.072-4.358.2-6.78 2.618-6.98 6.98-.059 1.281-.073 1.689-.073 4.948 0 3.259.014 3.668.072 4.948.2 4.358 2.618 6.78 6.98 6.98 1.281.058 1.689.072 4.948.072 3.259 0 3.668-.014 4.948-.072 4.354-.2 6.782-2.618 6.979-6.98.059-1.28.073-1.689.073-4.948 0-3.259-.014-3.667-.072-4.947-.196-4.354-2.617-6.78-6.979-6.98-1.281-.059-1.69-.073-4.949-.073zm0 5.838c-3.403 0-6.162 2.759-6.162 6.162s2.759 6.163 6.162 6.163 6.162-2.759 6.162-6.163c0-3.403-2.759-6.162-6.162-6.162zm0 10.162c-2.209 0-4-1.79-4-4 0-2.209 1.791-4 4-4s4 1.791 4 4c0 2.21-1.791 4-4 4zm6.406-11.845c-.796 0-1.441.645-1.441 1.44s.645 1.44 1.441 1.44c.795 0 1.439-.645 1.439-1.44s-.644-1.44-1.439-1.44z"
									></path>
								</svg>
							</a>
							<a
								href="https://www.linkedin.com/company/students-using-data-for-social-good/"
								target="_blank"
								rel="noopener noreferrer"
								class="text-gray-600 hover:text-accent-600"
								aria-label="LinkedIn"
							>
								<svg
									xmlns="http://www.w3.org/2000/svg"
									class="h-5 w-5"
									fill="currentColor"
									viewBox="0 0 24 24"
								>
									<path
										d="M4.98 3.5c0 1.381-1.11 2.5-2.48 2.5s-2.48-1.119-2.48-2.5c0-1.38 1.11-2.5 2.48-2.5s2.48 1.12 2.48 2.5zm.02 4.5h-5v16h5v-16zm7.982 0h-4.968v16h4.969v-8.399c0-4.67 6.029-5.052 6.029 0v8.399h4.988v-10.131c0-7.88-8.922-7.593-11.018-3.714v-2.155z"
									></path>
								</svg>
							</a>
							<a
								href="mailto:sudscmu@gmail.com"
								class="text-gray-600 hover:text-accent-600"
								aria-label="Email"
							>
								<svg
									xmlns="http://www.w3.org/2000/svg"
									class="h-5 w-5"
									fill="none"
									viewBox="0 0 24 24"
									stroke="currentColor"
								>
									<path
										stroke-linecap="round"
										stroke-linejoin="round"
										stroke-width="2"
										d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"
									></path>
								</svg>
							</a>
						</div>
					</div>

					<div>
						<h3 class="text-lg font-semibold mb-4">Location</h3>
						<address class="text-gray-600 not-italic">
							Carnegie Mellon University<br />
							5000 Forbes Avenue<br />
							Pittsburgh, PA 15213
						</address>
					</div>

					<div>
						<h3 class="text-lg font-semibold mb-4">Join Us</h3>
						<p class="text-gray-600 mb-2">
							Students can register for our mailing list on <a
								href="https://tartanconnect.cmu.edu/suds/club_signup"
								target="_blank"
								rel="noopener noreferrer"
								class="text-accent-600 hover:underline">Tartan Connect</a
							>.
						</p>
						<p class="text-gray-600">
							Attend our kickoff GBMs every fall semester to learn about
							projects and apply to join a team.
						</p>
					</div>
				</div>

				<div class="border-t border-gray-300 mt-8 pt-6 text-center">
					<p class="text-gray-600 text-sm">
						&copy; {new Date().getFullYear()} Students Using Data for Social Good
						at CMU. All rights reserved.
					</p>
				</div>
			</div>
		</footer>
	</body>
</html>

<script>
	// Mobile menu toggle
	const mobileMenuButton = document.getElementById("mobile-menu-button");
	const mobileMenu = document.getElementById("mobile-menu");

	if (mobileMenuButton && mobileMenu) {
		mobileMenuButton.addEventListener("click", () => {
			mobileMenu.classList.toggle("hidden");
		});
	}
</script>

<style>
	html,
	body {
		margin: 0;
		width: 100%;
		height: 100%;
	}
</style>
